<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="/" class="logo"><span>تگرو<span>خبری</span></span><i class="zmdi zmdi-layers"></i></a>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li hid>
                            <button class="button-menu-mobile open-left" hidden>
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                        <li>
                            <h4 class="page-title">@ViewData["Title"]</h4>
                        </li>
                    </ul>

                    <!-- Right(Notification and Searchbox -->
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <div style="line-height: 70px;">
                                    <ul class="list-inline m-b-0">
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                                        @Html.AntiForgeryToken()

                                        <li>
                                            @*<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOff">خروج</a>*@
                                            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-primary btn-rounded waves-effect waves-light">خروج</a>
                                        </li>
                                        }
                                    </ul>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li>
                                <div style="line-height: 70px;">
                                    <ul class="list-inline m-b-0">
                                        <li>
                                            @*<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">ورود /</a>*@
                                            @Html.ActionLink("ورود", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div style="line-height: 70px;">
                                    <ul class="list-inline m-b-0">
                                        <li></li>
                                        <li>@Html.ActionLink("ثبت نام", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                    </ul>
                                </div>
                            </li>
                        }
                        <li class="hidden-xs">
                            <form role="search" class="app-search" hidden>
                                <input type="text" placeholder="جست و جو"
                                       class="form-control">
                                <a href=""><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->
    </div>

    <!-- ========== Left Sidebar Start ========== -->
    <div class="left side-menu">
        <div class="sidebar-inner slimscrollleft">

            <!-- User -->
            <div class="user-box">
                <div class="user-img">
                    <img src="~/vert/assets/images/users/avatar-11.png" alt="user-img" title="محمود لول" class="img-circle img-thumbnail img-responsive">
                    <div class="user-status offline"><i class="zmdi zmdi-dot-circle"></i></div>
                </div>



                @if (Request.IsAuthenticated)
                {
                    <h5>
                        @User.Identity.GetUserName()
                    </h5>
                }

                <ul class="list-inline">
                    @*<li>
                            <a href="/Account/Profile">
                                <i class="zmdi zmdi-settings"></i>
                            </a>
                        </li>

                        <li>
                            <a href="/Account/LogOff" class="text-custom">
                                <i class="zmdi zmdi-power"></i>
                            </a>
                        </li>*@
                    @*<li class="zmdi">
                            @Html.Partial("_LoginPartial")

                        </li>*@
                </ul>
            </div>
            <!-- End User -->
            <!--- Sidemenu -->
            <div id="sidebar-menu">
                <ul>
                    <li class="text-muted menu-title">منو</li>

                    <li>
                        <a href="/Report/Index" class="waves-effect"><i class="zmdi zmdi-collection-text"></i> <span> خبرهای شما </span> </a>
                    </li>

                    <li>
                        <a href="/" class="waves-effect"><i class="zmdi zmdi-email"></i><span> تمامی خبرها </span></a>
                    </li>
                </ul>

                <div class="clearfix"></div>
            </div>
            <!-- Sidebar -->
            <div class="clearfix"></div>

        </div>

    </div>
    <!-- Left Sidebar End -->
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <partial name="_CookieConsentPartial" />
        <!-- Start content -->
        <div class="content">
            <div class="container">
                @RenderBody()

            </div>
        </div>
        <footer class="footer text-right">
            &copy; تگرو خبری 2019 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>




