@model Tagro.Data.Data.Report

@{
    ViewBag.Title = "ثبت خبر جدید";
}

@{
    List<Tagro.Data.Data.Category> categories = ViewBag.Categories;
}

<div class="form-horizontal">
    <h4>خبری</h4>
    <hr />
    <form action="Form" method="Post" enctype="multipart/form-data">

        <div class="form-group">
            <label class="control-label col-md-2">Title</label>
            <div class="col-md-10">
                <input name="Title" class="form-control" value="@Model.Title" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Body</label>
            <div class="col-md-10">
                <textarea name="Body" class="form-control summernote">@Model.Body</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            @if (categories != null)
            {
                <select id="CategoryId" name="CategoryId" class="form-control col-md-10">
                    <option value="0" class="col-md-10">دسته بندی اصلی</option>
                    @foreach (var item in categories)
                    {
                        <option class="col-md-10" value="@item.Id">@item.Name</option>
                    }
                </select>
            }
        </div>

        <input hidden name="Id" value="@Model.Id" />
        <input hidden name="Status" value="@Model.Status" />
        <input hidden name="CreatedDate" value="@Model.CreatedDate" />
        <input hidden name="Code" value="@Model.Code" />
        <input hidden name="ImageId" value="@Model.ImageId" />
        <input hidden name="CategoryId" value="@Model.CategoryId" />


        <div class="form-group">
            <label for="file" class="control-label col-md-2">Upload Image:</label>

            <input type="file" name="file" id="file" style="width: 100%;" />

        </div>

        <div class="form-group">
            <div class="col-md-10 col-lg-offset-2">
                <input type="submit" class="btn btn-primary" value="Send" />
            </div>
        </div>

    </form>

</div>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                lang: 'fa-IR' // default: 'en-US'
            });
        });
    </script>

}
